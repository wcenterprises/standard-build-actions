{
  "name": "standard-build-actions",
  "description": "Based on: GitHub Actions TypeScript template",
  "version": "1.0.0",
  "author": "Brian Welsh (@brian-welsh)",
  "private": true,
  "homepage": "https://github.com/wcenterprises/standard-build-actions",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wcenterprises/standard-build-actions.git"
  },
  "bugs": {
    "url": "https://github.com/wcenterprises/standard-build-actions/issues"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "template",
    "typescript"
  ],
  "exports": {
    ".": "./dist/**/*"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build:todo": "ncc build src/todo-action.ts -o dist/todo-action -s",
    "build:setup": "ncc build src/setup-action.ts -o dist/setup-action -s",
    "build:dotnet": "ncc build src/dotnet-action.ts -o dist/dotnet-action -s",
    "build:jira": "ncc build src/jira-action.ts -o dist/jira-action -s",
    "build": "concurrently npm:build:todo npm:build:setup npm:build:dotnet npm:build:jira",
    "clean": "rm -rf dist/*",
    "rebuild": "npm run clean && npm run build",
    "bundle": "npm run format:write && npm run package",
    "ci-test": "jest",
    "format:write": "prettier --write **/*.ts",
    "format:check": "prettier --check **/*.ts",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "ncc build src/index.ts --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "(jest && make-coverage-badge --output-path ./badges/coverage.svg) || make-coverage-badge --output-path ./badges/coverage.svg",
    "all": "npm run format:write && npm run lint && npm run test && npm run package"
  },
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**",
      "!./src/helpers/environment.ts",
      "!./src/helpers/utility.ts"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/io": "^1.1.3",
    "@chrisgavin/safe-which": "^1.0.2",
    "@octokit/core": "^5.0.1",
    "glob": "^10.3.10",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/jira-client": "^7.1.9",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vercel/ncc": "^0.38.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.53.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^27.4.3",
    "eslint-plugin-jsonc": "^2.10.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "jira-client": "^8.2.2",
    "js-yaml": "^4.1.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.1.0",
    "prettier-eslint": "^16.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "main": "src/index.js"
}
